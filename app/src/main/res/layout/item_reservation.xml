<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Naziv terena -->
        <TextView
            android:id="@+id/tvItemReservationFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Naziv terena"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Datum + vreme -->
        <TextView
            android:id="@+id/tvItemReservationDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Datum i vreme"
            android:textColor="@color/text_primary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvItemReservationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Cena: 0 RSD"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Napomena -->
        <TextView
            android:id="@+id/tvItemReservationNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Napomena"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
